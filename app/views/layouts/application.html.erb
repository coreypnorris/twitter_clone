          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to current_user.username, edit_user_registration_path %></a></li>
              <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
